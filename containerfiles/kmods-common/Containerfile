RUN \
  --mount=type=bind,from=ghcr.io/ktheticdev/akmods:cachyos-lto-43,src=/rpms,dst=/tmp/rpms,ro \
  set -eux; \
  echo "=== Installing prebuilt kernel modules ==="; \
  echo "RPMs found:"; \
  ls -lh /tmp/rpms/kmods; \
  test -n "$(ls -A /tmp/rpms/kmods)"; \
  dnf install -y \
    --setopt=install_weak_deps=False \
    /tmp/rpms/kmods/kmod*v4l2loopback*.rpm; \
  echo "=== Common kmods install complete ==="
